{
  "manifest_version": 3,
  "name": "LeetCode Cleaner",
  "version": "1.1",
  "description": "Toggle difficulty tags on LeetCode.",
  "permissions": ["storage"],
  "host_permissions": ["*://leetcode.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/*"],
      "js": ["content.js"]
    }
  ]
}
